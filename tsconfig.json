{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "es6", "es2015.promise"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "types": [],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src"
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/*", "node_modules", "dist"]
}
