{
  "name": "did-jwt-toolkit",
  "version": "0.1.0",
  "description": "The toolkit for did-jwt and did-jwt-vc",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.module.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:higayasuo/did-jwt-toolkit.git"
  },
  "author": "Yasuo Higa",
  "contributors": [],
  "license": "MIT",
  "scripts": {
    "build": "microbundle",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' ts-mocha -r tsconfig-paths/register --transpile-only --timeout 100000",
    "tests": "yarn test --paths **/*.spec.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "microbundle": "^0.15.1",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0"
  }
}
